pipeline {
    agent any

    stages {
        stage('Notify') {
            steps {
                script {
                    try {
                        emailext(
                            to: 'jamesnardella7@gmail.com',
                            subject: 'Commit Notification',
                            body: 'Commit successful!',
                            attachLog: false
                        )
                        echo 'Email sent successfully.'
                    } catch (Exception e) {
                        echo "Failed to send email: ${e.message}"
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution finished.'
        }
    }
}
